<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/question_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="> Which attribute specifies a unique alphanumeric identifier to be associated with an element?"
                android:textSize="18dp"/>

            <RadioGroup
                android:layout_marginTop="4dp"
                android:id="@+id/radioChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/choice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="class"/>

                <RadioButton
                    android:id="@+id/choice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="id"/>

                <RadioButton
                    android:id="@+id/choice3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="article"/>

                <RadioButton
                    android:id="@+id/choice4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="html"/>

            </RadioGroup>

            <TextView
                android:id="@+id/limitTimeText"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:drawableTint="@color/colorAccent"
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 2 Seconds left, before time's up"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>

            <ProgressBar
                android:id="@+id/limitTime"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:indeterminate="false"
                android:max="100"
                android:minHeight="20dp"
                android:layout_marginTop="2dp"
                android:progress="80" />

            <Button
                android:id="@+id/quizSubmitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Submit"
                android:textColor="#ffff"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

</android.support.v7.widget.CardView>